<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@drawable/shape_dialog">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBlue"
                android:gravity="center">
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textColor="@color/white"
                    android:text="标题"
                    android:textSize="25dp"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">
                    <TextView
                        android:id="@+id/tv_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="数量："
                        android:textSize="@dimen/textsize20"/>
                    <EditText
                        android:id="@+id/tv_input"
                        style="@style/Dialog_Key"
                        android:textSize="30dp"
                        android:text="1"
                        android:selectAllOnFocus="true"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                   <LinearLayout
                       style="@style/Dialog_linearLayout">
                       <TextView
                           android:id="@+id/key1"
                           style="@style/Dialog_Key"
                           android:text="1"/>
                       <TextView
                           android:id="@+id/key2"
                           style="@style/Dialog_Key"
                           android:text="2"/>
                       <TextView
                           android:id="@+id/key3"
                           style="@style/Dialog_Key"
                           android:text="3"/>
                       <ImageButton
                           android:id="@+id/keydel"
                           android:layout_width="80dp"
                           android:layout_height="60dp"
                           android:layout_weight="1"
                           android:layout_margin="1dp"
                           android:padding="10dp"
                           android:src="@drawable/ic_keyboard_backspace_black_36dp"
                           android:background="@drawable/dialog_key"/>
                   </LinearLayout>
                    <LinearLayout
                        style="@style/Dialog_linearLayout">
                        <TextView
                            android:id="@+id/key4"
                            style="@style/Dialog_Key"
                            android:text="4"/>
                        <TextView
                            android:id="@+id/key5"
                            style="@style/Dialog_Key"
                            android:text="5"/>
                        <TextView
                            android:id="@+id/key6"
                            style="@style/Dialog_Key"
                            android:text="6"/>
                        <TextView
                            android:id="@+id/keydot"
                            style="@style/Dialog_Key"
                            android:text="."/>
                    </LinearLayout>
                    <LinearLayout
                        style="@style/Dialog_linearLayout">
                        <TextView
                            android:id="@+id/key7"
                            style="@style/Dialog_Key"
                            android:text="7"/>
                        <TextView
                            android:id="@+id/key8"
                            style="@style/Dialog_Key"
                            android:text="8"/>
                        <TextView
                            android:id="@+id/key9"
                            style="@style/Dialog_Key"
                            android:text="9"/>
                        <TextView
                            android:id="@+id/keyzero"
                            style="@style/Dialog_Key"
                            android:text="0"/>
                    </LinearLayout>
                    <LinearLayout
                        style="@style/Dialog_linearLayout">
                        <TextView
                            android:id="@+id/tv_cancel"
                            style="@style/Dialog_Key"
                            android:background="@drawable/shape_cancel"
                            android:text="取消"/>
                        <TextView
                            android:id="@+id/tv_confirm"
                            style="@style/Dialog_Key"
                            android:background="@drawable/shape_confirm"
                            android:textColor="@color/white"
                            android:text="确定"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
</LinearLayout>
